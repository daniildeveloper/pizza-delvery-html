extends layouts/index-page-template.pug

block page-title
  | Главная

block content
  main
    //- hero banner
    .hero-banner.text-center
      img.logo(src="img/logo.png")
      h1.text-uppercase Доставка японской кухни
      p Японская кухня приготовленная
      p в лучших традициях
      a.btn.btn-danger
        p Открыть меню
